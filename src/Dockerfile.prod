FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Environment variables (default)
ENV PORT=8000

# Run with Uvicorn in production mode
# --proxy-headers: Trust Cloud Run load balancer headers
# --workers 1: For simple bot logic; increase if needed
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1", "--proxy-headers"]
